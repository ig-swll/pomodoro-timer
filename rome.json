{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "correctness": {
        "recommended": true
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "style": {
        "recommended": true,
        "noImplicitBoolean": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
